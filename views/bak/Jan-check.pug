html
    head
        title Janauary Test Result
    body
        h1 Point : #{point}
        table
            each row, index in param
                tr
                    td
                        h1  (#{index+1})
                    td(style={padding: "10px","border-bottom": "1pt solid black"})
                        h1
                            |  
                            each item in row
                                if item == ""
                                    input(type="text" style={width: "80px", height:"50px", "font-size":"24px", background:yourAnswer[index]==answer[index]?"cyan":"fuchsia", border:"solid 3px green;"} value=yourAnswer[index]) 
                                else
                                    | #{item}  
                            |
                    td(align="right", style={width: "300px", "border-bottom": "1pt solid black"})
                        h1 answer : #{answer[index]} 
        h1
            a(href="/Jan?templateid="+templateid+"&templatename="+templatename) back to list

