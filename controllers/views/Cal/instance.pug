html
    head
        title Janauary New Test
    body
        form(action="/Cal/check", method="post")
            input(type="hidden" name="instanceid" value=instanceid)
            input(type="hidden" name="templateid" value=templateid)
            table
                each row, index in param
                    tr
                        td
                            h1  (#{index+1})
                        td(style={padding: "10px"})
                            h1
                                |  
                                each value in row
                                    if value == ""
                                        input(type="text" name="answer" style={width: "80px", height:"50px", "font-size":"24px",border:"solid 3px green;"}) 
                                    else
                                        | #{value}  
                                |
            button(type="submit",style={"font-size":"24px"}) check
                
        